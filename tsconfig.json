{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}

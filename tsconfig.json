{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "target": "es2018",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,

    //TODO needs more effort but it would be better if this is true
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    //TODO needs more effort but it would be better if this is true
    "noImplicitAny": false,

    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["hammerjs"],
    "allowJs": true,
    "resolveJsonModule": true
  }
}
